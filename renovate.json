{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreUnstable",
    "group:monorepos",
    "group:recommended"
  ],
  "schedule": ["before 4am on Monday"],
  "timezone": "Asia/Shanghai",
  "labels": ["dependencies"],
  "assignees": ["@your-username"],
  "reviewers": ["@your-username"],
  "packageRules": [
    {
      "description": "Group Node.js dependencies",
      "groupName": "Node.js dependencies",
      "matchPackagePrefixes": ["@types/node", "node"],
      "schedule": ["before 4am on Monday"]
    },
    {
      "description": "Group Express.js ecosystem",
      "groupName": "Express.js ecosystem",
      "matchPackageNames": [
        "express",
        "express-gateway",
        "@express-gateway/**"
      ],
      "schedule": ["before 4am on Monday"]
    },
    {
      "description": "Group testing dependencies",
      "groupName": "Testing dependencies",
      "matchPackageNames": [
        "jest",
        "playwright",
        "@playwright/**",
        "stryker",
        "@stryker-mutator/**"
      ],
      "schedule": ["before 4am on Monday"]
    },
    {
      "description": "Group linting and formatting",
      "groupName": "Linting and formatting",
      "matchPackageNames": [
        "eslint",
        "@eslint/**",
        "prettier",
        "markdownlint",
        "shellcheck"
      ],
      "schedule": ["before 4am on Monday"]
    },
    {
      "description": "Security updates - auto-merge",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchDatasources": ["npm"],
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on Monday"]
  }
}
