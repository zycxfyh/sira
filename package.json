{
  "name": "sira-ai-gateway",
  "version": "2.1.0-beta.1",
  "description": "Sira - 智能API网关，支持多AI服务商智能路由和监控",
  "homepage": "https://github.com/zycxfyh/sira",
  "repository": {
    "type": "git",
    "url": "https://github.com/zycxfyh/sira.git"
  },
  "bugs": {
    "url": "https://github.com/zycxfyh/sira/issues"
  },
  "author": "Sira AI Team <1666384464@qq.com>",
  "keywords": [
    "ai-gateway",
    "artificial-intelligence",
    "api-gateway",
    "microservices",
    "load-balancing",
    "rate-limiting",
    "circuit-breaker",
    "monitoring",
    "prometheus",
    "grafana",
    "enterprise-solution",
    "intelligent-routing",
    "multi-layer-cache",
    "internationalization"
  ],
  "contributors": [
    "Sira AI Team <1666384464@qq.com>",
    "Express Gateway Team (Original Framework)"
  ],
  "license": "Apache-2.0",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/zycxfyh"
  },
  "main": "src/index.js",
  "bin": {
    "sira": "./src/bin/sira-cli.js"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "cross-env NODE_ENV=development node src/index.js",
    "cli": "node src/bin/sira-cli.js",
    "lint": "eslint .",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "test": "cross-env TEST_TYPE=unit jest",
    "test:watch": "cross-env TEST_TYPE=unit jest --watch",
    "test:coverage": "cross-env TEST_TYPE=unit jest --coverage",
    "test:integration": "cross-env TEST_TYPE=integration jest --testPathPattern=\"integration\"",
    "test:e2e": "cross-env TEST_TYPE=e2e jest --testPathPattern=\"e2e\"",
    "test:packages": "jest packages/",
    "performance:baseline:save": "node scripts/performance-regression.js --save-baseline",
    "dev:clean": "node tools/dev-helpers.js clean",
    "dev:reinstall": "node tools/dev-helpers.js reinstall",
    "dev:quality": "node tools/dev-helpers.js quality",
    "dev:report": "node tools/dev-helpers.js report",
    "docker:build": "docker build -f Dockerfile -t sira-ai-gateway .",
    "docker:run": "docker run -p 8080:8080 sira-ai-gateway",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-compose.yml down"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "exclude": [
      "logo",
      "node_modules",
      "coverage",
      "migrations",
      "test"
    ]
  },
  "dependencies": {
    "@sira/ai-client": "workspace:*",
    "@sira/ai-core": "workspace:*",
    "@sira/ai-router": "workspace:*",
    "@sira/cache": "workspace:*",
    "@sira/circuit-breaker": "workspace:*",
    "@sira/config-manager": "workspace:*",
    "@sira/core": "workspace:*",
    "@sira/data-access": "workspace:*",
    "@sira/errors": "workspace:*",
    "@sira/events": "workspace:*",
    "@sira/foundation": "workspace:*",
    "@sira/logger": "workspace:*",
    "@sira/metrics": "workspace:*",
    "@sira/monitoring": "workspace:*",
    "@sira/rate-limiting": "workspace:*",
    "@sira/routing": "workspace:*",
    "@sira/services": "workspace:*",
    "@sira/utils": "workspace:*",
    "ajv-keywords": "5.1.0",
    "chokidar": "4.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "superagent": "10.2.3",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.40.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@testing-library/jest-dom": "^6.1.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^29.5.8",
    "@types/json-schema": "^7.0.3",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "autocannon": "^8.0.0",
    "axios-mock-adapter": "^1.22.0",
    "chai": "^6.2.0",
    "codecov": "^3.5.0",
    "commander": "^14.0.2",
    "cross-env": "^5.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "find-free-port": "^2.0.0",
    "husky": "^3.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^9.5.0",
    "nyc": "^17.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.6.2",
    "rimraf": "^3.0.0",
    "semantic-release": "^24.2.9",
    "should": "^13.2.3",
    "sinon": "^7.4.2",
    "supertest": "^4.0.2",
    "supertest-session": "^4.0.0",
    "tmp": "^0.2.5",
    "yeoman-test": "^7.4.0"
  },
  "yargs": {
    "boolean-negation": false
  }
}
