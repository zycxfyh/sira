version: '3.8'

services:
  # Sira - Production Environment (Load Balanced)
  ai-gateway:
    build:
      context: ../..
      dockerfile: Dockerfile
    ports:
      - "${EG_HTTP_PORT:-8080}:8080"
    environment:
      - NODE_ENV=production
      - EG_HTTP_PORT=${EG_HTTP_PORT:-8080}
      - EG_ADMIN_PORT=${EG_ADMIN_PORT:-9876}
      - EG_REDIS_HOST=redis
      - EG_REDIS_PORT=6379
      - EG_REDIS_PASSWORD=${REDIS_PASSWORD}
      - EG_DB_REDIS_DB=0
      - EG_LOG_LEVEL=warn
      # AI Provider Keys (use production keys)
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
      - AZURE_OPENAI_API_KEY=${AZURE_OPENAI_API_KEY}
      - AZURE_OPENAI_ENDPOINT=${AZURE_OPENAI_ENDPOINT}
      # Security
      - GATEWAY_API_KEY=${GATEWAY_API_KEY}
      - JWT_SECRET=${JWT_SECRET}
      # Monitoring
      - SENTRY_DSN=${SENTRY_DSN}
      - DATADOG_API_KEY=${DATADOG_API_KEY}
    volumes:
      - ../../config:/app/config:ro
      - ../../logs:/app/logs
      - ../../ssl:/app/ssl:ro
    depends_on:
      - redis
    restart: always
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    networks:
      - ai-gateway-prod
    deploy:
      mode: replicated
      replicas: 3
      resources:
        limits:
          cpus: '1.0'
          memory: 2G
        reservations:
          cpus: '0.5'
          memory: 1G
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
      update_config:
        parallelism: 1
        delay: 10s
        failure_action: rollback
        monitor: 60s
        max_failure_ratio: 0.3
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.ai-gateway.rule=Host(`${DOMAIN:-ai-gateway.company.com}`)"
        - "traefik.http.routers.ai-gateway.tls.certresolver=letsencrypt"
        - "traefik.http.services.ai-gateway.loadbalancer.server.port=8080"
        - "traefik.http.middlewares.ai-gateway-ratelimit.ratelimit.burst=100"
        - "traefik.http.middlewares.ai-gateway-ratelimit.ratelimit.average=50"

  # Redis Cluster for production
  redis:
    image: redis:7-alpine
    ports:
      - "${REDIS_PORT:-6379}:6379"
    command: >
      redis-server
      --appendonly yes
      --requirepass "${REDIS_PASSWORD}"
      --maxmemory 1gb
      --maxmemory-policy allkeys-lru
      --tcp-keepalive 60
      --timeout 300
    volumes:
      - redis_prod_data:/data
      - ./redis/prod.conf:/etc/redis/redis.conf:ro
    restart: always
    healthcheck:
      test: ["CMD", "redis-cli", "--raw", "incr", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3
    networks:
      - ai-gateway-prod
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 1G
        reservations:
          cpus: '0.25'
          memory: 512M

  # Load Balancer / Reverse Proxy
  traefik:
    image: traefik:v2.10
    ports:
