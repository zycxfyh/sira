#!/bin/bash

# Sira AI Gateway - Health Check Script
# This script performs basic health checks on the project

set -e

echo "üîç Performing Sira AI Gateway Health Check..."
echo "=============================================="

# Check Node.js version
echo "üì¶ Checking Node.js version..."
NODE_VERSION=$(node --version | sed 's/v//')
REQUIRED_VERSION="18.0.0"

if [ "$(printf '%s\n' "$REQUIRED_VERSION" "$NODE_VERSION" | sort -V | head -n1)" = "$REQUIRED_VERSION" ]; then
    echo "‚úÖ Node.js version: $NODE_VERSION (‚úì meets requirement >= $REQUIRED_VERSION)"
else
    echo "‚ùå Node.js version: $NODE_VERSION (‚úó requires >= $REQUIRED_VERSION)"
    exit 1
fi

# Check npm
echo "üì¶ Checking npm..."
if command -v npm &> /dev/null; then
    NPM_VERSION=$(npm --version)
    echo "‚úÖ npm version: $NPM_VERSION"
else
    echo "‚ùå npm not found"
    exit 1
fi

# Check project structure
echo "üèóÔ∏è  Checking project structure..."

# Required directories
REQUIRED_DIRS=(
    "src/core"
    "src/config"
    "src/test"
    "docs"
    "scripts/utilities"
    "infrastructure"
    ".github/workflows"
)

for dir in "${REQUIRED_DIRS[@]}"; do
    if [ -d "$dir" ]; then
        echo "‚úÖ Directory exists: $dir"
    else
        echo "‚ùå Directory missing: $dir"
        exit 1
    fi
done

# Required files
REQUIRED_FILES=(
    "package.json"
    "README.md"
    "LICENSE"
    ".gitignore"
    ".github/workflows/ci.yml"
    "src/core/index.js"
    "src/config/gateway.config.yml"
)

for file in "${REQUIRED_FILES[@]}"; do
    if [ -f "$file" ]; then
        echo "‚úÖ File exists: $file"
    else
        echo "‚ùå File missing: $file"
        exit 1
    fi
done

# Check package.json validity
echo "üì¶ Checking package.json..."
if npm run --silent test:unit --dry-run &> /dev/null; then
    echo "‚úÖ package.json scripts are valid"
else
    echo "‚ö†Ô∏è  Some package.json scripts may have issues"
fi

# Check for common security issues
echo "üîí Checking for security issues..."
if [ -f ".env" ]; then
    echo "‚ö†Ô∏è  .env file found - ensure it's not committed"
fi

if grep -r "password\|secret\|key" .env* &> /dev/null 2>&1; then
    echo "‚ö†Ô∏è  Sensitive data found in .env files"
fi

# Check git status
echo "üìù Checking git status..."
if [ -d ".git" ]; then
    if git status --porcelain | grep -v "^??" | head -5 | grep . &> /dev/null; then
        echo "‚ö†Ô∏è  There are staged/uncommitted changes"
    else
        echo "‚úÖ Git working directory is clean"
    fi
else
    echo "‚ö†Ô∏è  Not a git repository"
fi

echo ""
echo "üéâ Health check completed successfully!"
echo "=============================================="
echo "üìä Summary:"
echo "   ‚úÖ Project structure is valid"
echo "   ‚úÖ Required dependencies are available"
echo "   ‚úÖ Configuration files are present"
echo ""
echo "üöÄ Ready for development and deployment!"
