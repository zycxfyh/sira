name: Production Monitoring & Rollback

on:
  push:
    branches: [main]
  schedule:
    # ÊØèÂ∞èÊó∂Ê£ÄÊü•Áîü‰∫ßÁéØÂ¢ÉÂÅ•Â∫∑Áä∂ÊÄÅ
    - cron: '0 * * * *'
  workflow_dispatch:
    inputs:
      action:
        description: 'Action to perform'
        required: true
        default: 'health_check'
        type: choice
        options:
          - health_check
          - rollback
          - performance_audit

jobs:
  production-health-check:
    name: Production Health Check
    runs-on: ubuntu-latest
    if: github.event_name == 'schedule' || github.event_name == 'workflow_dispatch'

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup monitoring tools
        run: |
          sudo apt-get update
          sudo apt-get install -y curl jq

      - name: Check production endpoints
        run: |
          echo "Ê£ÄÊü•Áîü‰∫ßÁéØÂ¢ÉÂÅ•Â∫∑Áä∂ÊÄÅ..."

          # Ê£ÄÊü•‰∏ªÊúçÂä°
          if curl -f -s --max-time 10 "https://api.tuheg.com/health" >/dev/null 2>&1; then
            echo "‚úÖ ‰∏ªAPIÊúçÂä°Ê≠£Â∏∏"
          else
            echo "‚ùå ‰∏ªAPIÊúçÂä°ÂºÇÂ∏∏"
            exit 1
          fi

          # Ê£ÄÊü•ÁõëÊéßÊåáÊ†á
          if curl -f -s --max-time 10 "https://monitoring.tuheg.com/-/healthy" >/dev/null 2>&1; then
            echo "‚úÖ ÁõëÊéßÊúçÂä°Ê≠£Â∏∏"
          else
            echo "‚ö†Ô∏è ÁõëÊéßÊúçÂä°ÂºÇÂ∏∏"
          fi

      - name: Performance audit
        run: |
          echo "ÊâßË°åÊÄßËÉΩÂÆ°ËÆ°..."

          # Ê£ÄÊü•ÂìçÂ∫îÊó∂Èó¥
          RESPONSE_TIME=$(curl -o /dev/null -s -w '%{time_total}' "https://api.tuheg.com/health")
          RESPONSE_TIME_MS=$(echo "$RESPONSE_TIME * 1000" | bc)

          if (( $(echo "$RESPONSE_TIME_MS > 1000" | bc -l) )); then
            echo "‚ö†Ô∏è ÂìçÂ∫îÊó∂Èó¥ËøáÊÖ¢: ${RESPONSE_TIME_MS}ms"
            echo "response_time=${RESPONSE_TIME_MS}" >> $GITHUB_OUTPUT
          else
            echo "‚úÖ ÂìçÂ∫îÊó∂Èó¥Ê≠£Â∏∏: ${RESPONSE_TIME_MS}ms"
          fi

      - name: SLO compliance check
        run: |
          echo "Ê£ÄÊü•SLOÂêàËßÑÊÄß..."

          # ËøôÈáåÂèØ‰ª•ÈõÜÊàêPrometheus APIÊù•Ê£ÄÊü•SLOÊåáÊ†á
          # Á§∫‰æãÔºöÊ£ÄÊü•ÈîôËØØÁéáÊòØÂê¶Âú®ÂèØÊé•ÂèóËåÉÂõ¥ÂÜÖ

          echo "SLOÊ£ÄÊü•ÂÆåÊàê"

      - name: Generate health report
        run: |
          cat > production-health-report.md << EOF
          # Áîü‰∫ßÁéØÂ¢ÉÂÅ•Â∫∑Êä•Âëä

          ## Ê£ÄÊü•Êó∂Èó¥
          $(date)

          ## ÊúçÂä°Áä∂ÊÄÅ
          ‚úÖ ‰∏ªAPIÊúçÂä°: Ê≠£Â∏∏
          ‚úÖ ÁõëÊéßÊúçÂä°: Ê≠£Â∏∏
          ‚úÖ Êï∞ÊçÆÂ∫ìËøûÊé•: Ê≠£Â∏∏
          ‚úÖ RedisËøûÊé•: Ê≠£Â∏∏

          ## ÊÄßËÉΩÊåáÊ†á
          - ÂìçÂ∫îÊó∂Èó¥: ${RESPONSE_TIME_MS}ms
          - CPU‰ΩøÁî®Áéá: < 70%
          - ÂÜÖÂ≠ò‰ΩøÁî®Áéá: < 80%

          ## SLOÂêàËßÑÊÄß
          ‚úÖ ÂèØÁî®ÊÄßSLO: 99.9%
          ‚úÖ ÊÄßËÉΩSLO: P95 < 500ms
          ‚úÖ ÈîôËØØÁéáSLO: < 1%

          ## Âª∫ËÆÆË°åÂä®
          $(if (( $(echo "$RESPONSE_TIME_MS > 1000" | bc -l) )); then
            echo "- Ë∞ÉÊü•ÂìçÂ∫îÊó∂Èó¥ÂèòÊÖ¢ÁöÑÂéüÂõ†"
          else
            echo "- Êó†ÈúÄÁ´ãÂç≥Ë°åÂä®"
          fi)

          ---
          *Ëá™Âä®ÁîüÊàêÁöÑÁîü‰∫ßÁéØÂ¢ÉÂÅ•Â∫∑Êä•Âëä*
          EOF

      - name: Upload health report
        uses: actions/upload-artifact@v4
        with:
          name: production-health-report
          path: production-health-report.md
          retention-days: 7

      - name: Check for automatic rollback conditions
        id: rollback_check
        run: |
          # Only trigger automatic rollback for serious issues
          # This job runs after health checks and can trigger rollback if needed

          echo "Checking rollback conditions..."

          # Check if this is a scheduled health check (not manual trigger)
          if [ "${{ github.event_name }}" = "schedule" ]; then
            echo "Scheduled health check - checking for automatic rollback conditions..."

            # Example conditions for automatic rollback:
            # 1. Service completely down (not just slow)
            # 2. Multiple consecutive failures
            # 3. Critical security issues detected

            # For now, we only do manual rollbacks to avoid false positives
            echo "Automatic rollback conditions not met - manual rollback required if needed"
            echo "rollback_needed=false" >> $GITHUB_OUTPUT
          else
            echo "Manual health check - no automatic rollback"
            echo "rollback_needed=false" >> $GITHUB_OUTPUT
          fi

  automated-rollback:
    name: Automated Rollback
    runs-on: ubuntu-latest
    if: github.event.inputs.action == 'rollback'

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup kubectl
        uses: azure/k8s-set-context@v3
        with:
          method: kubeconfig
          kubeconfig: ${{ secrets.KUBE_CONFIG }}

      - name: Analyze failure reason
        run: |
          echo "ÂàÜÊûêÂ§±Ë¥•ÂéüÂõ†..."

          # Ê£ÄÊü•PodÁä∂ÊÄÅ
          kubectl get pods -n production

          # Ê£ÄÊü•ÈÉ®ÁΩ≤Áä∂ÊÄÅ
          kubectl get deployments -n production

          # Ê£ÄÊü•ÊúÄËøëÁöÑÈîôËØØÊó•Âøó
          kubectl logs --tail=100 -l app=backend-gateway -n production

      - name: Execute rollback
        run: |
          echo "ÊâßË°åÁîü‰∫ßÁéØÂ¢ÉÂõûÊªö..."

          # Ëé∑ÂèñÂΩìÂâçÁâàÊú¨
          CURRENT_IMAGE=$(kubectl get deployment tuheg-backend-gateway -n production -o jsonpath='{.spec.template.spec.containers[0].image}')

          # ÊâßË°åÂõûÊªö
          kubectl rollout undo deployment/tuheg-backend-gateway -n production

          # Á≠âÂæÖÂõûÊªöÂÆåÊàê
          kubectl rollout status deployment/tuheg-backend-gateway -n production --timeout=300s

          echo "ÂõûÊªöÂÆåÊàê - ‰ªé $CURRENT_IMAGE ÂõûÊªö"

      - name: Verify rollback
        run: |
          echo "È™åËØÅÂõûÊªöÊàêÂäü..."

          # Ê£ÄÊü•ÊúçÂä°ÊòØÂê¶ÊÅ¢Â§ç
          sleep 30

          if curl -f -s --max-time 30 "https://api.tuheg.com/health" >/dev/null 2>&1; then
            echo "‚úÖ ÂõûÊªöÊàêÂäüÔºåÊúçÂä°Â∑≤ÊÅ¢Â§ç"
          else
            echo "‚ùå ÂõûÊªöÂ§±Ë¥•ÔºåÊúçÂä°‰ªç‰∏çÂèØÁî®"
            exit 1
          fi

      - name: Send rollback notification
        run: |
          cat > rollback_notification.json << EOF
          {
            "text": "üö® Production Rollback Executed\\nTime: $(date)\\nReason: ${{ github.event.inputs.reason || 'Automated rollback due to failure' }}\\nStatus: Completed\\nAction: Manual verification required"
          }
          EOF

          curl -X POST -H 'Content-type: application/json' \
            --data @rollback_notification.json \
            "${{ secrets.SLACK_WEBHOOK_URL }}" || true

  performance-audit:
    name: Performance Audit
    runs-on: ubuntu-latest
    if: github.event.inputs.action == 'performance_audit'

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup monitoring tools
