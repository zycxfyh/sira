{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "tsc",
    "webpack": false
  },
  "monorepo": true,
  "projects": {
    "nexus-engine": {
      "type": "application",
      "root": "apps/nexus-engine",
      "entryFile": "main",
      "sourceRoot": "apps/nexus-engine/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nexus-engine/tsconfig.app.json"
      }
    },
    "logic-agent": {
      "type": "application",
      "root": "apps/logic-agent",
      "entryFile": "main",
      "sourceRoot": "apps/logic-agent/src",
      "compilerOptions": {
        "tsConfigPath": "apps/logic-agent/tsconfig.app.json"
      }
    },
    "narrative-agent": {
      "type": "application",
      "root": "apps/narrative-agent",
      "entryFile": "main",
      "sourceRoot": "apps/narrative-agent/src",
      "compilerOptions": {
        "tsConfigPath": "apps/narrative-agent/tsconfig.app.json"
      }
    },
    "creation-agent": {
      "type": "application",
      "root": "apps/creation-agent",
      "entryFile": "main",
      "sourceRoot": "apps/creation-agent/src",
      "compilerOptions": {
        "tsConfigPath": "apps/creation-agent/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}