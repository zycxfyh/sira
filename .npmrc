# NPM Configuration
# Save exact versions instead of ranges in package.json
save-exact=true

# Disable progress bar for CI environments
progress=false

# Disable funding messages
fund=false

# Enable audit fix on install
audit=true

# Set timeout for network requests
timeout=60000

# Prefer offline cache
prefer-offline=true

# Cache max age
cache-max=604800000

# Enable workspaces if using workspaces
# workspaces=true
