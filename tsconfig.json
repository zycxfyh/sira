{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@tuheg/common-backend": ["packages/common-backend/src"],
      "@tuheg/common-backend/*": ["packages/common-backend/src/*"],
      "@/*": ["apps/frontend/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}