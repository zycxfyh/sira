{
  "name": "api-gateway-v2",
  "version": "2.0.0",
  "description": "API中转站V2 - 高级版本，支持批处理、用户管理、多租户",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:perf": "artillery run tests/load-test.yml",
    "test:smoke": "node scripts/smoke-test.js",
    "test:all": "npm run test:coverage && npm run test:integration && npm run test:e2e",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\" \"tests/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\" \"tests/**/*.{js,json}\"",
    "type-check": "tsc --noEmit --allowJs --checkJs",
    "build": "npm run lint && npm run test:coverage",
    "report": "node scripts/generate-test-report.js",
    "docker:build": "docker build -t api-gateway-v2 .",
    "docker:run": "docker run -p 3000:3000 api-gateway-v2",
    "db:migrate": "node scripts/migrate.js",
    "cost:calc": "node scripts/cost-calculator.js",
    "batch:process": "node scripts/batch-processor.js",
    "dev:setup": "bash scripts/dev-setup.sh",
    "dev:start": "bash scripts/dev-setup.sh start",
    "dev:stop": "bash scripts/dev-setup.sh stop"
  },
  "keywords": ["api", "gateway", "ai", "cost-optimization", "batching", "multi-tenant"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "redis": "^4.6.8",
    "axios": "^1.6.0",
    "prom-client": "^14.2.0",
    "winston": "^3.10.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.3",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1",
    "rate-limit-redis": "^4.0.0",
    "express-fileupload": "^1.4.3",
    "archiver": "^6.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@playwright/test": "^1.40.0",
    "artillery": "^2.0.7",
    "jest-junit": "^16.0.0",
    "jest-html-reporter": "^3.10.2",
    "mongodb-memory-server": "^9.1.1",
    "redis-memory-server": "^1.0.0",
    "clinic": "^13.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "typescript": "^5.3.2"
  }
}
