{
  "$id": "http://express-gateway.io/schemas/policies/ai-cache.json",
  "type": "object",
  "properties": {
    "ttl": {
      "type": "integer",
      "minimum": 0,
      "maximum": 86400,
      "default": 300,
      "description": "Cache TTL in seconds"
    },
    "maxSize": {
      "type": "integer",
      "minimum": 100,
      "maximum": 100000,
      "default": 10000,
      "description": "Maximum number of cache entries"
    },
    "compressionEnabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable response compression in cache"
    },
    "varyByHeaders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Headers to vary cache by"
    },
    "strategy": {
      "type": "string",
      "enum": ["lru", "lfu", "ttl", "random"],
      "default": "lru",
      "description": "Cache eviction strategy"
    },
    "cleanupInterval": {
      "type": "integer",
      "minimum": 10000,
      "maximum": 3600000,
      "default": 60000,
      "description": "Cleanup interval in milliseconds"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable caching"
    }
  },
  "additionalProperties": true
}
