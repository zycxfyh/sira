# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Declare files that will always have CRLF line endings on checkout
*.sln text eol=crlf

# Declare files that will always have LF line endings on checkout
*.md text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Language-specific settings
*.py text eol=lf
*.rb text eol=lf
*.php text eol=lf
*.java text eol=lf
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf

# Documentation and markup
*.html text eol=lf
*.xml text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Configuration files
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Docker files
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf
*.dockerfile text eol=lf

# Package files
package.json text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Lock files should preserve exact bytes
*.lock binary

# Generated files
coverage/* binary
.nyc_output/* binary
dist/* binary
build/* binary
